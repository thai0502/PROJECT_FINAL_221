<div class="container mt-5">
    <div class="row">
        <!-- Left Column - Product Images -->
        <div class="col-md-6">
            <div class="mb-3">
                <img src="image1.jpg" class="img-fluid mb-2" alt="Product Image">
                <!-- Additional Product Images -->
                <div class="row">
                    <div class="col-4">
                        <img src="image2.jpg" class="img-fluid" alt="Product Image">
                    </div>
                    <div class="col-4">
                        <img src="image3.jpg" class="img-fluid" alt="Product Image">
                    </div>
                    <div class="col-4">
                        <img src="image4.jpg" class="img-fluid" alt="Product Image">
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column - Product Description -->
        <div class="col-md-6">
            <h2 class="mb-4">Product Name</h2>
            <p class="text-muted mb-4">Seller: Seller Name</p>
