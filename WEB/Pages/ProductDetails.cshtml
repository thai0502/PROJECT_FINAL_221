@page
@model WEB.Pages.ProductDetailsModel
@{
}
<div class="container mt-5">
    <div class="row">
        <!-- Left Column - Product Images -->
        <div class="col-md-6">
            <div class="mb-3">
                <img src="@Model.Product.ProductImages.FirstOrDefault().ImageUrl" class="img-fluid mb-2" alt="Product Image">
                <!-- Additional Product Images -->
                <div class="row">
                    @foreach (var item in Model.Images)
                    {
                        <div class="col-4">
                            <img src="@item.ImageUrl" class="img-fluid" alt="Product Image">
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column - Product Description -->
        <div class="col-md-6">
            <h2 class="mb-4">@Model.Product.Name</h2>
            <p class="text-muted mb-4">Seller: @Model.Product.User.Username</p>
            <p>Description: @Model.Product.Description .</p>
            <a asp-page="/chat" asp-route-reciveceder="@Model.Product.UserId">
                <button class="btn btn-primary">Chat</button>
            </a>
        </div>
    </div>
</div>
<div class="container mt-5">
    <h1 class="mb-4">Comments</h1>

    <!-- Form for adding new comment -->
    <form id="commentForm">

        <div class="mb-3">
            <label for="commentInput" class="form-label">Comment</label>
            <textarea class="form-control" id="commentInput" rows="3" placeholder="Your Comment"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <hr>

    <!-- Display existing comments -->
    <div id="comments">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Kien</h5>
                <p class="card-text">CÒn hàng không!</p>
                <a href="#" class="card-link reply-link">Reply</a>
                <div class="reply-form" style="display: none;">
                    <form class="reply-comment-form">
                        <div class="mb-3">
                            <label for="replyCommentInput" class="form-label">Comment</label>
                            <textarea class="form-control" id="replyCommentInput" rows="1" placeholder="Your Reply"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit Reply</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Tung</h5>
                <p class="card-text">Good!!!!</p>
                <a href="#" class="card-link reply-link">Reply</a>
                <div class="reply-form" style="display: none;">
                    <form class="reply-comment-form">
                        <div class="mb-3">
                            <label for="replyCommentInput" class="form-label">Comment</label>
                            <textarea class="form-control" id="replyCommentInput" rows="1" placeholder="Your Reply"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit Reply</button>
                    </form>

                </div>
            </div>
            <div class="card ms-5 mb-3">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">TùngLD</h6>
                    <p class="card-text">Mua nhé.</p>
                </div>
            </div>
        </div>



    </div>
</div>

<script>
    // Event listener for showing reply form
    document.querySelectorAll('.reply-link').forEach(function (link) {
        link.addEventListener('click', function (event) {
            event.preventDefault();
            var replyForm = this.nextElementSibling;
            replyForm.style.display = (replyForm.style.display === 'none' || replyForm.style.display === '') ? 'block' : 'none';
        });
    });
</script>