    </div>
</div>
<div class="container mt-5">
    <h1 class="mb-4">Comments</h1>

    <!-- Form for adding new comment -->
    <form id="commentForm">

        <div class="mb-3">
            <label for="commentInput" class="form-label">Comment</label>
            <textarea class="form-control" id="commentInput" rows="3" placeholder="Your Comment"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <hr>

    <!-- Display existing comments -->
    <div id="comments">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">User 1</h5>
                <p class="card-text">This is a great comment!</p>
                <a href="#" class="card-link reply-link">Reply</a>
                <div class="reply-form" style="display: none;">
                    <form class="reply-comment-form">
                        <div class="mb-3">
                            <label for="replyCommentInput" class="form-label">Comment</label>
                            <textarea class="form-control" id="replyCommentInput" rows="1" placeholder="Your Reply"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit Reply</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">User 1</h5>
                <p class="card-text">This is a great comment!</p>
                <a href="#" class="card-link reply-link">Reply</a>
                <div class="reply-form" style="display: none;">
                    <form class="reply-comment-form">
                        <div class="mb-3">
                            <label for="replyCommentInput" class="form-label">Comment</label>
                            <textarea class="form-control" id="replyCommentInput" rows="1" placeholder="Your Reply"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit Reply</button>
                    </form>
                   
                </div>
            </div>
            <div class="card ms-5 mb-3">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">User 2</h6>
                    <p class="card-text">I agree with the previous comment.</p>
                </div>
            </div>
        </div>

       

    </div>
</div>

<script>
    // Event listener for showing reply form
    document.querySelectorAll('.reply-link').forEach(function (link) {
        link.addEventListener('click', function (event) {
            event.preventDefault();
            var replyForm = this.nextElementSibling;
            replyForm.style.display = (replyForm.style.display === 'none' || replyForm.style.display === '') ? 'block' : 'none';
        });
    });
</script>