@page
@model WEB.Pages.UserManager.ManagerProduct.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.ProductId" />
            <div class="form-group">
                <label asp-for="Product.UserId" class="control-label"></label>
                <input readonly asp-for="Product.UserId" class="form-control" />
                <span asp-validation-for="Product.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.CategoryId" class="control-label"></label>
                <select asp-for="Product.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Product.StatusId" class="control-label"></label>
                <select asp-for="Product.StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
                <span asp-validation-for="Product.StatusId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Image URLs</label>
                <div id="imageUrls">
                    @* @foreach (var imageUrl in Model.Product.ImageUrls)
                    {
                        <input type="text" asp-for="Product.ImageUrls" value="@imageUrl" class="form-control mb-2" />
                    } *@
                </div>
                <button type="button" class="btn btn-primary" onclick="addImageUrl()">Add Image URL</button>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    function addImageUrl() {
        var input = document.createElement('input');
        input.type = 'text';
        input.name = 'Product.ImageUrls[]';
        input.className = 'form-control mb-2';
        document.getElementById('imageUrls').appendChild(input);
    }
</script>